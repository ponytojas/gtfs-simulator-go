########################################
# GTFS Simulator Configuration (.env)
########################################

# Postgres connection (either DATABASE_URL or PG* vars)
# For city-based DB resolution, point to cluster root DB (usually 'postgres').
#DATABASE_URL=postgres://user:pass@127.0.0.1:5432/postgres?sslmode=disable

# Alternatively:
#PGHOST=127.0.0.1
#PGPORT=5432
#PGUSER=postgres
#PGPASSWORD=secret
#PGDATABASE=postgres
#PGSSLMODE=disable

# NATS connection URL
NATS_URL=nats://127.0.0.1:4222

# Log each NATS publish subject (verbose)
#LOG_NATS_SUBJECTS=true

# Prometheus metrics endpoint address (empty disables)
#METRICS_ADDR=:9102

# Publish interval in milliseconds
PUBLISH_INTERVAL_MS=1000

# How often to refresh active trips (seconds)
TRIPS_REFRESH_INTERVAL_SEC=60

# Preload upcoming trips within this horizon (minutes)
TRIPS_PRELOAD_MINUTES=30

# Speed multiplier (1.0 = real-time)
SPEED_MULTIPLIER=1.0

# Time zone (optional; defaults to system local)
#TZ=Europe/Vilnius

# City for dynamic DB selection (matches db_name with ILIKE)
#CITY=Vilnius
